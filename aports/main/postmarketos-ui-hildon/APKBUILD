pkgname=postmarketos-ui-hildon
pkgver=1
pkgrel=0
pkgdesc="Lightweight desktop for resistive touchscreens"
url="https://github.com/postmarketOS"
arch="noarch"
license="GPL3+"
depends="
	dbus-x11
	eudev
	hildon-desktop
	hildon-theme-alpha
	mesa
	mesa-dri-swrast
	xorg-server
	xf86-input-libinput
	xf86-video-modesetting
	xinit
"
makedepends=""
install="$pkgname.post-install"
subpackages=""
source="start_hildon.sh xinitrc_hildon.sh $install"
options="!check"

package() {
	install -D -m644 "$srcdir"/start_hildon.sh \
		"$pkgdir"/etc/profile.d/start_hildon.sh
	install -D -m644 "$srcdir"/xinitrc_hildon.sh \
		"$pkgdir"/etc/postmarketos-ui/xinitrc_hildon.sh
}
